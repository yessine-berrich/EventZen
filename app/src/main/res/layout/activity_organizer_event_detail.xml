<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrganizerEventDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                tools:text="Titre de l'Événement à Gérer"/>

            <TextView
                android:id="@+id/tv_detail_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                tools:text="Lieu : Adresse complète"/>

            <TextView
                android:id="@+id/tv_detail_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                tools:text="Du 2025-11-20 au 2025-11-21"/>

            <TextView
                android:id="@+id/tv_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Description..."/>

            <Button
                android:id="@+id/btn_edit_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modifier les Détails de l'Événement"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btn_manage_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gérer les Billets (Prix/Quantité)"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btn_view_registrations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir la Liste des Inscriptions"
                android:layout_marginBottom="12dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>